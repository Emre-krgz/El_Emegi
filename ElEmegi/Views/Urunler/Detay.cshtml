@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

@model ElEmegi.Models.Urunler
<div class="single">
    <div class="container">
        <div class="single-info">
            <div class="col-md-6 single-top wow fadeInLeft animated" data-wow-delay=".5s">
                <div class="flexslider">
                    <ul class="slides">
                        @foreach (var item in Model.Resimlers)
                        {
                            <li data-thumb="@item.ResimYolu">
                                <div class="thumb-image"> <img src="@item.ResimYolu" data-imagezoom="true" class="img-responsive" alt=""> </div>
                            </li>
                        }
            
                    </ul>
                </div>
            </div>
            <div class="col-md-6 single-top-left simpleCart_shelfItem wow fadeInRight animated" data-wow-delay=".5s">
                <h3>@Model.Baslik</h3>
              
                <h6 class="item_price">@Model.Fiyat TL</h6>
                <p>@Model.Aciklama</p>
            
                
                <div class="clearfix"> </div>
                <div class="quantity">
                    <p class="qty"> Qty :  </p><input min="1" type="number" value="1" class="item_quantity">
                </div>
                <div class="btn_form">
                    <a href="#" class="add-cart item_add">Sepete Ekle</a>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
        
    </div>
</div>
