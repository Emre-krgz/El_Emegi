@model IEnumerable<ElEmegi.Models.musteriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<link href="~/Areas/Content2/css/bootstrap.min.css" rel="stylesheet">
<!-- styles -->
<link href="~/Areas/Content2/css/styles.css" rel="stylesheet">
<div class="col-md-10">

    <div class="content-box-large">
        <div class="panel-heading">
            <div class="panel-title">Bootstrap dataTables</div>
        </div>
        <div class="panel-body">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.kullanici_adi)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.musteri_adi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.musteri_soyadi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.eposta)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.adres)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.telefon)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tarih)
                        </th>

                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.kullanici_adi)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.musteri_adi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.musteri_soyadi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.eposta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.adres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.telefon)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tarih)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.telefon)
                                </td>*@

                            @*<td>
                                    @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                                    @Html.ActionLink("Details", "Details", new { id=item.id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id=item.id })
                                </td>*@
                        </tr>
                    }

            </table>
        </div>
    </div>
</div>



